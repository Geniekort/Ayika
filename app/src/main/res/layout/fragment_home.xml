<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/homefrag">



    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/helpblack"
        android:layout_alignParentRight="true"
        android:background="#000"
        android:layout_margin="12dp"
        android:scaleType="fitCenter"
        android:id="@+id/helpme3"
        />
        <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
            android:id="@+id/holidaybutton"
        android:src="@drawable/plane"
        android:layout_alignParentLeft="true"
        android:background="#000"
        android:layout_margin="12dp"
        android:scaleType="fitCenter"
        />




    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureText"
        android:text="30Â°"
        android:textSize="70dp"
        android:textColor="#FFF"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/dateAndTimeField"
        android:layout_below="@id/temperatureText"
        android:text="DAYTIMEANDSO"
        android:textColor="#FFF"
        android:layout_alignParentLeft="true"
        android:gravity="right"
        />

    <com.a2id40group36.ayika.ayika.ThrottleSlider
        android:id="@+id/throttle"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"/>


</RelativeLayout>